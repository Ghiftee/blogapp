<div>
  <div>
    <h1><%= @user.photo %></h1>
  </div>
  <div>
    <div>
      <h4><%= @user.name %></h4>
    </div>
    <div>
      <p>Number of post: <%= @user.posts_counter%></p>
    </div>
  </div>
</div>

<% @posts.each do |post|%>
  <div>
    <div>
      <h4><%= post.id %></h4>
    </div>
    <div>
      <p><%= post.text %>Lorem Ipsum is simply dummy text of the printing and typesetting industry. 
      Lorem Ipsum has been the industry's standard dummy text ever since the 1500s,</p>
      <p> <%= Comments: @post.comments_counter %>, <%= Likes: @post.likes_counter%></p>
    </div>
  </div>
  <div>
    <h4><%= @user.name %>: Comment 1</h4>
    <h4><%= @user.name %>: Comment 2</h4>
    <h4><%= @user.name %>: Comment 3</h4>
    <h4><%= @user.name %>: Comment 4</h4>
    <h4><%= @user.name %>: Comment 5</h4>
  </div>
<% end %>

<div>
  <button type="submit" >Pagination</button>
</div>