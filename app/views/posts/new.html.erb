<div>
  <%= form_with url: create_new_post_path, model: @post do |form| %>
    <h2>Create a post</h2>
    <div>
      <%= form.text_field :title, class: "input", required: true, placeholder: "Post title", value: nil %>
    </div>
    <div>
      <%= form.text_area :text, size: "60x10", required: true, placeholder: "Post content", value: nil, class: "text_area" %>
    </div>
    <%= form.submit %>
  <% end %>
</div>