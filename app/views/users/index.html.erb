<% @users.each do |user| %>
  <article class = 'user-section'>
    <div class  = 'user-image'>
      <h1><%= user.photo %></h1>
    </div>

    <div class = 'user-content'>
      <div>
        <h2><%= link_to user.name, user_path(user), class: 'user-name'%></h2>
      </div>

      <div>
        <p class = 'post-num'>Number of posts:<%= user.posts.size %></p>
      </div>
    </div>
  </article>
<% end %>
